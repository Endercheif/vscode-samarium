{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Samarium",
	"patterns": [
		{ "include": "#strings" },
        { "include": "#comments" },
        { "include": "#ctrl-statements" },
        { "include": "#numbers" },
        { "include": "#names" },
        { "include": "#operators" }
	],
	"repository": {
		"strings": {
			"patterns": [
                {
                    "name": "string.quoted.double.samarium",
                    "match": "([\"])(?:(?=(\\\\?))\\2.)*?\\1"
                },
				{
					"name": "constant.character.escape.samarium",
					"match": "\\\\"
				},
                {
                    "match": "(\\${)([^}]*)(})",
                    "captures": {
                        "1": { "name": "punctuation.definition.interpolation.begin.samarium" },
                        "2": { "name": "variable.name.samarium" },
                        "3": { "name": "punctuation.definition.interpolation.end.samarium" }
                    }
                }
			]
		},
        "comments": {
            "patterns": [
                {
                    "begin": "==<",
                    "end": ">==",
                    "name": "comment.block.samarium"
                },
                {
                    "name": "comment.block.empty.samarium",
                    "match": "==<>=="
                },
                {
                    "name": "comment.line.samarium",
                    "begin": "==",
                    "end": "\\n"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.samarium",
                    "match": "/|\\\\"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.samarium",
                    "match": "(->\\?|<:|<<|<|>:|>>|>|:::|::|:|\\+|-|&&|&|\\|\\||\\||~~|~|\\^)"
                },
                {
                    "name": "keyword.control.samarium",
                    "match": "(\\*|\\.|@|,,|#)"
                },
                {
                    "name": "storage.samarium",
                    "match": "(\\?|!|\\$|'|%)"
                }
            ]
        },
        "names": {
            "patterns": [
                {
                    "match": "(\\#)\\s*([A-Za-z]+)\\s*(?:([A-Za-z]+)*(?:\\s*,\\s*([A-Za-z]+))*)",
                    "captures": {
                        "1": { "name": "keyword.control.samarium" },
                        "2": { "name": "entity.name.function.samarium" },
                        "3": { "name": "variable.parameter.samarium" },
                        "4": { "name": "variable.parameter.samarium" }
                    }
                },
                {
                    "match": "(\\@)\\s*([A-Za-z]+)\\s*(?:\\({0,1}\\s*([A-Za-z]+)*(?:\\s*,\\s*([A-Za-z]+))*\\s*\\){0,1}\\s*)\\{",
                    "captures": {
                        "1": { "name": "keyword.control.samarium" },
                        "2": { "name": "entity.name.function.samarium" },
                        "3": { "name": "variable.parameter.samarium" },
                        "4": { "name": "variable.parameter.samarium" }
                    }
                },
                {
                    "match": "([A-Za-z]+)((?:\\s*[A-Za-z]+)*)\\s*(\\*)\\s*\\{",
                    "captures": {
                        "1": { "name": "entity.name.function.samarium" },
                        "2": { "name": "variable.parameter.samarium" },
                        "3": { "name": "keyword.control.samarium" }
                    }
                },
                {
                    "match": "([A-Za-z]+)\\(",
                    "captures": {
                        "1": { "name": "entity.name.function.samarium" }
                    }
                },
                {
                    "name": "variable.name.samarium",
                    "match": "[A-Za-z]+"
                }
            ]
        }
	},
	"scopeName": "source.samarium"
}